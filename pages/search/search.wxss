.topArea{
  top:0;
  width: 100%;
  position:sticky;
  z-index: 1;
  background-color: white;
}
.select{
  margin:20rpx;
  font-size:25rpx;
}
.search{
  border:1rpx solid gray;
  border-radius:10px;
  padding:10rpx;
  display:flex;
  margin:20rpx;
}
.box{
  display: flex;
  padding:15rpx;
  border:1px solid gray;
  margin-bottom: 10rpx;
  box-shadow: gray 1rpx 1rpx 7rpx ;

}
.photo{
  height:200rpx;
  width:200rpx;
  background-color:gray;
  line-height: 200rpx;
  text-align: center;
}
.info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 20rpx;
  font-size: 25rpx;
  font-weight: bold;
}
.detail{
  color:gray;
  font-weight: lighter;
}