/* 步骤展示区 */
.stepArea{
  height:150rpx;
  width:100%;
  display:inline-flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding:10rpx;
}
.stepBox{
  display:inline-flex;
  justify-content: space-around;
}
.stepId{
  border-radius: 50%;
  /* color:gray; */
  /* display: flex; */
  /* justify-content: center; */
  text-align: center;
  border:1px solid gray;
  color:white;
}
.stepContent{
  font-size:12px;
  /* color:gray; */
}
/* 步骤1 */
.input{
  border:1rpx solid gray;
  border-radius:10px;
  padding:10rpx;
  display:flex;
  /* margin:20rpx; */
}
.search{
  border:1rpx solid gray;
  border-radius:10px;
  padding:10rpx;
  display:flex;
  /* margin:20rpx; */
}
.msgbox{
  display:flex;
  flex-direction: column;
  margin:20rpx;
}
.pic{
  width:200rpx;
  height:200rpx;
  border-radius: 5px;
  border:2px dashed lightgray;
  display: flex;
  margin:20rpx;
}
.uploadArea{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.uploadBox{
  /* border:1px solid black; */
  width:300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin:30rpx;
}
.btn{
  width:100%;
  position:fixed;
  bottom: 0px;
  z-index: 1;
  background-color: white;
  margin:0;
}
